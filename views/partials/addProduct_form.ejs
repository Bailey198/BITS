<div>
    <label for="productName">Product Name:</label>
    <input class="w-64 h-4 p-4 rounded-2xl border-solid-1 border-black" id="productName" type="text" name="name" value="<%= locals.productData ? productData.name : "" %>">
</div>
<div>
    <label for="image">Image:</label>
    <input class="productCover w-64 p-2" data-max-file-size="2MB" accept="image/png, image/jpeg" id="image" type="file" name="image">
</div>
<div>
    <label for="price">Price:</label>
    <input class="w-64 h-4 p-4 rounded-2xl border-solid-1 border-black" id="price" type="number" name="price" value="<%= locals.productData ? productData.price : "" %>">
</div>
<div>
    <label for="description">Description:</label>
    <input class="w-64 h-4 p-4 rounded-2xl border-solid-1 border-black" id="description" type="text" name="description" value="<%= locals.productData ? productData.description : "" %>">
</div>
<div>
    <label for="stock">In stock:</label>
    <input class="w-64 h-4 p-4 rounded-2xl border-solid-1 border-black" id="stock" type="number" name="stock" value="<%= locals.productData ? productData.stock : "" %>">
</div>
<div>
    <label for="brand">Brand:</label>
    <input class="w-64 h-4 p-4 rounded-2xl border-solid-1 border-black" id="brand" type="text" name="brand" value="<%= locals.productData ? productData.brand : "" %>">
</div>
<div>
    <label for="category">Category:</label>
<!-- Category Selection -->
    <select name="category" id="category">
        <% const selectedCategory = locals.productData ? productData.category : "" %>
        <% if (locals.categories) { %>
            <% categories.forEach(category => { %>
                <% if (category == selectedCategory) { %>
                    <option selected value="<%= category %>"><%= category %></option>
                <% } else { %>
                    <option value="<%= category %>"><%= category %></option>
                <% } %>
            <% }); %>
        <% } %>
    </select>
</div>
<div>
    <label for="tags">Tags:</label>
    <input class="w-64 h-4 p-4 rounded-2xl border-solid-1 border-black" id="tags" type="text" name="tags" value="<%= locals.productData ? productData.tags : "" %>">
</div>
